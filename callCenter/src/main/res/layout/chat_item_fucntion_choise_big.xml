<?xml version="1.0" encoding="utf-8"?>
<!--   -->
<HorizontalScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    >



    <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        >
<!--        android:background="@drawable/bg_chat_function_choise_line"-->
                <LinearLayout
                    android:id="@+id/chat_item_functon_call"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_chat_item_function_big"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/callinfo_query"
                        android:contentDescription="TODO" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/query_callinfo"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bg_actionbar_bg"
                        android:textSize="17sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_item_functon_create_call"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5sp"
                    android:background="@drawable/bg_chat_item_function_big"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/create_call" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="开 call"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bg_actionbar_bg"
                        android:textSize="17sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_item_functon_repair"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_chat_item_function_big"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/repair_query" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="维保查询"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bg_actionbar_bg"
                        android:textSize="17sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/chat_item_functon_local"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_chat_item_function_big"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/local_query"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Local查询"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bg_actionbar_bg"
                        android:textSize="17sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_item_functon_part"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_chat_item_function_big"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/part_query" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="part查询"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bg_actionbar_bg"
                        android:textSize="17sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/chat_item_functon_src"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_chat_item_function_big"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/src_query" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="src查询"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bg_actionbar_bg"
                        android:textSize="17sp" />

                </LinearLayout>

    </LinearLayout>
</HorizontalScrollView >