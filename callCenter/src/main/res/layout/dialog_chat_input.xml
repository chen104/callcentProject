<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/dialog_title_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/query_callinfo"
        android:gravity="center"
        android:padding="3dp"
        android:textSize="25sp"
        android:textColor="@color/bg_actionbar_bg"
        />
    <LinearLayout
        android:id="@+id/dialog_line_machin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/machin_type"
            android:gravity="center"
            android:textColor="@color/bg_actionbar_bg"
            />
        <EditText
            android:id="@+id/dialog_et_machin_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="4位机器类型"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_dialog_editview"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_line_machin_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/machin_SN"
            android:gravity="center"
            android:textColor="@color/bg_actionbar_bg"
            />
        <EditText
            android:id="@+id/dialog_et_machin_sn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="7位机器序列号"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_dialog_editview"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dialog_line_phone"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="电话号码"
            android:textColor="@color/bg_actionbar_bg"
            />
        <EditText
            android:id="@+id/dialog_et_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="电话号码"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_dialog_editview"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dialog_line_callno"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="工单单号"
            android:textColor="@color/bg_actionbar_bg"
            />
        <EditText
            android:id="@+id/dialog_et_callno"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="7位工单单号"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_dialog_editview"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/dialog_tx_reson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        />

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            />
        <Button
            android:id="@+id/dialog_sure"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:gravity="center"
            />
    </LinearLayout>



</LinearLayout>
