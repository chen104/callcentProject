<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_item_ratingbar_layout"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <RatingBar
        android:id="@+id/chat_item_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3.5"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_chat_item_ratingbar_item_choise"
        >
        <TextView
            android:id="@+id/bt_rating_very_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="非常好的经验"
            android:textColor="@color/blue"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:background="@drawable/bg_chat_item_ratingbar"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/bt_rating_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="不错的经验"
            android:textColor="@color/blue"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:background="@drawable/bg_chat_item_ratingbar"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/bt_rating_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有待改进"
            android:textColor="@color/blue"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:background="@drawable/bg_chat_item_ratingbar"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>